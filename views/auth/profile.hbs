
{{#if this}}
<div class="container-fluid p-0">
  <div class="auth-config p-5">
    <div class="d-flex justify-content-center p-5">
      <div class="profile-container">
        <div class="profile-card">
          <div class="container-img-profile col-md-4 d-flex flex-column justify-content-center bd-highlight">
            <img class="card-img" src="{{this.image}}" alt="profile image" width=150 height=150>
            <a class="btn-profile mt-3 ml-3 btn-sm btn btn-secondary border-0 rounded-pill"
              style="background-color: #A0FFE3; color: #575267" href="/profile-edit/{{_id}}">Update Profile</a>
              <a class="btn-profile mt-3 ml-3 btn-sm btn btn-secondary rounded-pill border-0"
              style="background-color: #A0FFE3; color: #575267" href="/project-create">Creat Project</a>
            <a class="btn-profile mt-3 ml-3 btn-sm btn btn-secondary rounded-pill border-0"
              style="background-color: #A0FFE3; color: #575267" href="/logout">Logout</a>
            {{else}}
            <p>Sorry, no logged in user!</p>
            {{/if}}
            <a class="btn-profile mt-3 ml-3 btn-sm btn btn-danger rounded-pill border-0"
              href="/delete-user/{{this._id}}">Delete Account</a>
          </div>
          <div class="col-md-8">
            <div class="card-body mt-3">
              <h2>Profile Page</h2>
              <div class="profile-details mt-3">
                <p><strong>Name: </strong>{{this.name}}</p>
                <p><strong>E-mail: </strong>{{this.email}}</p>
                <p><strong>Occupation: </strong>{{this.occupation}}</p>
                <p><strong>GitHub: </strong><a href="{{this.gitHub}}">{{this.gitHub}}</a></p>
                <p><strong>Skills: </strong>{{this.skills}}</p>
                <p><strong>About Me: </strong>{{this.aboutMe}}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>